 <div class="row ">
    <div class="col pt-2">
     
    </div>
    <div class="col d-grid gap-2 d-md-flex justify-content-md-end align-self-center">
     <p>para <a href="/logout">cerrar sesión</a></p>
    </div>
  </div>
    
<div class=" row text-light bg-dark ">

  <div class="col text-center">
    <h2>
      <b>Bienvenido Administrador</b>
    </h2>
  </div>

</div>
<div>
  <hr>
</div>
  </div>
</div>
<div class="col">
  <table class='table table-striped table-hover'>
    <thead>
      <tr>
        <th href="/admin/{{id}}" value="DELETE" scope='col' id="id">id</th>
        <th scope='col'>Nombre</th>
        <th scope='col'>Email</th>
        <th scope='col'>Rut</th>
        <th scope='col'>Dirección</th>
        <th scope='col'>Saldo</th>
      </tr>
    </thead>
    {{#each allUsers}}
    <tbody>
      <tr>
        <th scope='row' href="/admin/{{id}}" value="DELETE" id="id">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>{{this.rut}}</td>
        <td>{{this.address}}</td>
        <td>${{this.balance}}</td>

        <td><button type="submit" class="btn btn-light btn-outline-danger" onclick="borrar({{id}})" value="DELETE">Eliminar</button></td>

      </tr>
    </tbody>
    {{/each}}
</div>
</div>

<table class='table table-striped table-hover'>
  <div class="pt-2 text-center"><h4><b></b> Tranferencias Realizadas:</h4></div>

  <thead>
    <tr>
      <th scope='col'>Fecha</th>
      <th scope='col'>Origen</th>
      <th scope='col'>Destino</th>
      <th scope='col'>Monto</th>
    </tr>
  </thead>
  <tbody>
    {{#each transfers}}
    <tr>
      <th scope='row'>{{this.fecha}}</th>
      <td>{{this.origen}}</td>
      <td>{{this.destino}}</td>
      <td>${{this.monto}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>
<script>
  function borrar(id) {
    axios.delete("http://localhost:3000/admin/" + id).then(() => {
      alert("Cliente id: " + id + " Eliminado exitosamente");

    });
  }
</script>
