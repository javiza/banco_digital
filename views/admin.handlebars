<div class="text-center row text-center mt-5">
  <div class="bg-dark text-light">
    <h2>
      <b>Bienvenido Administrador</b>
    </h2>
  </div>
  <div class="m-auto"> <a href='/logout'>
      <button class='btn btn-light btn-outline-danger '>
        Salir de la sesión
      </button>
    </a>
  </div>
</div>
<div class="col">
  <table class='table table-striped table-hover'>
    <thead>
      <tr>
        <th href="/admin/{{id}}" value="DELETE" scope='col' id="id">id</th>
        <th scope='col'>nombre</th>
        <th scope='col'>email</th>
        <th scope='col'>Rut</th>
        <th scope='col'>Dirección</th>
        <th scope='col'>Saldo</th>
      </tr>
    </thead>
    {{#each allUsers}}
    <tbody>
      <tr>
        <th scope='row' href="/admin/{{id}}" value="DELETE" id="id">{{this.id}}</th>
        <td>{{this.name}}</td>
        <td>{{this.email}}</td>
        <td>${{this.rut}}</td>
        <td>${{this.address}}</td>
        <td>${{this.balance}}</td>
        
          <td><button type="submit" class="btn btn-danger" onclick="borrar({{id}})" value="DELETE">Eliminar</button></td>
        
      </tr>
    </tbody>
    {{/each}} 
</div>
</div>
<script>
  function borrar(id) {
    axios.delete("http://localhost:3000/admin/" + id).then(() => {
      alert("Cliente id" + id + " eliminado");
      
    });
  }
</script>